<?xml version="1.0" encoding="utf-8"?>

<!-- ListView の行そのものをタップした場合の処理を実行できるように
     android:descendantFocusability="blocksDescendants"　を行のroot要素に設定 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:padding="3dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.multipurposetoilet.multipurposetoilet_light.ListActivity"
    android:weightSum="1">

    <!--<Spinner-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="right"-->
    <!--android:entries="@array/ingredients_quantity"/>-->

    <!-- LinearLayout（horizontal） の中に
     LinearLayout (ImageView, TextView) と LinearLayout（TextView, Button） を並べる -->
    <LinearLayout
        android:background="@drawable/bg"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/pin"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/distance"
                android:layout_marginTop="3dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="3dp"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/dButton"
                android:layout_marginBottom="3dp"
                android:textSize="26sp"
                android:textColor="#ff5722"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:onClick="goDetailedInformation" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>