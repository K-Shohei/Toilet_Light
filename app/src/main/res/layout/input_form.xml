<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#A9E2F3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="避難所データ入力画面"
                android:textSize="40dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="1.　避難所名"
                android:textSize="28dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text=""
                android:textSize="28dp"
                android:layout_weight="2"
                android:hint="障害者支援施設　日の山のぞみ苑"
                android:id="@+id/name" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="2.　座標"
                android:textSize="28dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="　　　緯度"
                android:textSize="28dp"
                android:layout_weight="1" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:hint="33.999406"
                android:id="@+id/lon" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="　　　経度"
                android:textSize="28dp"
                android:layout_weight="1" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:hint="131.352224"
                android:id="@+id/lat" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="3.　住所"
                android:textSize="28dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="2"
                android:hint="山口県宇部市東岐波1451−1"
                android:id="@+id/address" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="4.　電話番号"
                android:textSize="28dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:inputType="phone"
                android:layout_weight="2"
                android:hint="0836-59-2411"
                android:id="@+id/phone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="5.　利用可能時間"
                android:textSize="24dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="2"
                android:hint="月曜日～金曜日　10:00～17:00"
                android:id="@+id/time" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="6.　外観の写真"
            android:textSize="24dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="読み込み"
            android:textSize="28dp"
            android:layout_weight="2"
            android:id="@+id/gaikan_button" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="right">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/id1_gaikan"
            android:id="@+id/gaikan_image" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="7.　内装の写真"
                android:textSize="24dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="読み込み"
                android:textSize="28dp"
                android:layout_weight="2"
                android:id="@+id/naisou_button" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="right">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/id1"
            android:id="@+id/naisou_image" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="8.　内装写真のタイトル"
            android:textSize="28dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:textSize="28dp"
            android:layout_weight="1"
            android:hint="食堂"
            android:id="@+id/naisou_title" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="9.　避難所の属性"
            android:textSize="28dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:hint="障害者施設"
                android:id="@+id/att_0" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:hint="定員50名"
                android:id="@+id/att_1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:id="@+id/att_2" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:id="@+id/att_3" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:id="@+id/att_4" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="10.　避難所の状態"
            android:textSize="28dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="受け入れ"
                    android:textSize="28dp"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:textSize="28dp"
                    android:layout_weight="1"
                    android:hint="可"
                    android:id="@+id/state_0" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="100dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="現在の収容人数"
                    android:textSize="28dp"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:textSize="28dp"
                    android:layout_weight="1"
                    android:hint="20人"
                    android:id="@+id/state_1" />
            </LinearLayout>
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="100dp"
            android:paddingRight="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="収容可能人数"
                android:textSize="28dp"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:textSize="28dp"
                android:layout_weight="1"
                android:hint="あと10人"
                android:id="@+id/state_2" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingLeft="100dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="その他"
                    android:textSize="28dp"
                    android:layout_weight="1"/>
                <EditText
                    android:inputType="textMultiLine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:layout_weight="1"
                    android:hint="多目的トイレあり。\n備蓄食料あり。\n廊下スペースあり。"
                    android:minLines="5"
                    android:id="@+id/state_3" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <Button
            android:id="@+id/input_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="入力完了"
            android:textSize="28dp"
            android:layout_weight="1"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>